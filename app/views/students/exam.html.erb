<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Exam Report</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        display: flex;
        background-color: #F6F6F6;
        margin: 0;
      }

      .container {
        margin-left: 270px;
        padding: 20px;
        width: calc(100% - 270px);
      }

      .header-card {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #E57E0C;
        color: white;
        padding: 20px;
        border-radius: 15px;
        margin-bottom: 20px;
      }

      .header-card .info {
        display: flex;
        gap: 20px;
      }

      .header-card .info div {
        line-height: 1.5;
      }

      .download-btn {
        background-color: white;
        color: #E57E0C;
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: bold;
        text-decoration: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      .exam-card {
        background: white;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
      }

      .history-item {
        background: #f8f9fa;
        padding: 10px;
        border-radius: 10px;
        margin-bottom: 10px;
      }

      .grid-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
      }

      .grid-item {
        background: white;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s ease;
      }

      .grid-item:hover {
        transform: translateY(-10px);
      }

      .percentage {
        font-size: 32px;
        margin-top: 10px;
      }

      .percentage.green {
        color: #28a745;
      }

      .percentage.yellow {
        color: #ffc107;
      }

      .percentage.red {
        color: #dc3545;
      }
    </style>
  </head>
  <body>
    <div class="sidebar">
      <a href="<%= student_dashboard_path(current_student) %>" class="item">
        <div class="icon">üè†</div>
        <div class="text">Dashboard</div>
      </a>
      <a href="<%= profile_student_path(current_student) %>" class="item">
        <div class="icon">üßë‚Äçüéì</div>
        <div class="text">Student Profile</div>
      </a>
      <a href="<%= merit_student_path(current_student) %>" class="item">
        <div class="icon">üòÅ</div>
        <div class="text">Merit-Demerit</div>
      </a>
      <a href="<%= exam_student_path(current_student) %>" class="item">
        <div class="icon">üìö</div>
        <div class="text">Exam Report</div>
      </a>
      <a href="<%= student_canteen_path(current_student) %>" class="item">
        <div class="icon">ü•ò</div>
        <div class="text">Canteen Fees</div>
      </a>
      <%= button_to logout_path, method: :delete, class: "logout-btn" do %>
        <div class="icon">üö™</div>
        <div class="text">Logout</div>
      <% end %>
    </div>
    <div class="container">
      <!-- Header Section -->
      <div class="row flex-grow-1">
        <div class="header-card">
          <div class="info">
            <div>
              <strong>NAME :</strong> <%= @student.StudentName %><br>
              <strong>CLASS :</strong> <%= @student.StudentClass %><br>
              <strong>Student ID:</strong> <%= @student.StudentID %>
            </div>
          </div>
          <div class="header-right">
            <%= link_to 'Download Slip', download_exam_report_student_path(@student), class: 'download-btn', format: :pdf %>
          </div>
        </div>
        <!-- Exam Report Grid Section -->
        <div class="row">
          <div class="col-12">
            <div class="grid-container"> <% @subjects.each do |subject| %>
                <div class="grid-item">
                  <h3><%= subject.Name %></h3>
                  <% if subject.grades.any? %>
                    <% subject.grades.each do |grade| %>
                      <div class="percentage"><%= grade.Grade %></div>
                    <% end %>
                  <% else %>
                    <div class="percentage">No grades available</div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
